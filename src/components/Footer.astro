---
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import { SITE_DESCRIPTION, SOCIAL_LINKS } from "@/consts";

const today = new Date();
---

<footer class="border-t border-border/60 bg-background">
    <div class="mx-auto flex max-w-6xl flex-col gap-10 px-4 py-10 sm:px-6">
        <div
            class="flex flex-col gap-10 lg:flex-row lg:items-start lg:justify-between"
        >
            <div class="space-y-3">
                <a href="/" class="flex items-center text-foreground">
                    <img src="/images/unoplat-logo-light.svg" alt="Unoplat Blog" class="h-7 w-auto dark:hidden" />
                    <img src="/images/unoplat-logo-dark.svg" alt="Unoplat Blog" class="hidden h-7 w-auto dark:block" />
                </a>
                <p class="max-w-sm text-sm text-muted-foreground">
                    {SITE_DESCRIPTION}
                </p>
                <p class="text-xs text-muted-foreground">
                    &copy; {today.getFullYear()} Unoplat. All rights reserved.
                </p>
            </div>

            <div class="flex flex-col gap-8 sm:flex-row sm:gap-12">
                <div class="space-y-2">
                    <p
                        class="text-xs font-semibold uppercase tracking-widest text-muted-foreground"
                    >
                        Explore
                    </p>
                    <div class="flex flex-col gap-1">
                        <Button
                            asChild
                            variant="ghost"
                            size="sm"
                            className="justify-start px-2 text-muted-foreground hover:text-foreground"
                        >
                            <a href="/">Home</a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="sm"
                            className="justify-start px-2 text-muted-foreground hover:text-foreground"
                        >
                            <a href="/blog">Blog</a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="sm"
                            className="justify-start px-2 text-muted-foreground hover:text-foreground"
                        >
                            <a href="/tags">Tags</a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="sm"
                            className="justify-start px-2 text-muted-foreground hover:text-foreground"
                        >
                            <a href={SOCIAL_LINKS.website} target="_blank" rel="noopener noreferrer">About</a>
                        </Button>
                    </div>
                </div>

                <div class="space-y-2">
                    <p
                        class="text-xs font-semibold uppercase tracking-widest text-muted-foreground"
                    >
                        Social
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <Button
                            asChild
                            variant="ghost"
                            size="icon"
                            className="text-muted-foreground hover:text-foreground"
                        >
                            <a
                                href={SOCIAL_LINKS.website}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Unoplat Website"
                            >
                                <svg
                                    viewBox="0 0 24 24"
                                    class="size-4"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <path d="M2 12h20"></path>
                                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                                </svg>
                            </a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="icon"
                            className="text-muted-foreground hover:text-foreground"
                        >
                            <a
                                href={SOCIAL_LINKS.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Unoplat on GitHub"
                            >
                                <Image
                                    src="/images/social/github-mark.svg"
                                    alt=""
                                    width={16}
                                    height={16}
                                    class="size-4 dark:invert"
                                />
                            </a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="icon"
                            className="text-muted-foreground hover:text-foreground"
                        >
                            <a
                                href={SOCIAL_LINKS.discord}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Join Unoplat Discord"
                            >
                                <Image
                                    src="/images/social/Discord-Symbol-Blurple.svg"
                                    alt=""
                                    width={16}
                                    height={16}
                                    class="size-4"
                                />
                            </a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="icon"
                            className="text-muted-foreground hover:text-foreground"
                        >
                            <a
                                href={SOCIAL_LINKS.linkedin}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Unoplat on LinkedIn"
                            >
                                <Image
                                    src="/images/social/LI-In-Bug.png"
                                    alt=""
                                    width={16}
                                    height={16}
                                    class="size-4"
                                />
                            </a>
                        </Button>
                        <Button
                            asChild
                            variant="ghost"
                            size="icon"
                            className="text-muted-foreground hover:text-foreground"
                        >
                            <a
                                href={SOCIAL_LINKS.twitter}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Unoplat on X (Twitter)"
                            >
                                <Image
                                    src="/images/social/x-logo.svg"
                                    alt=""
                                    width={16}
                                    height={16}
                                    class="size-4 dark:invert"
                                />
                            </a>
                        </Button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</footer>
