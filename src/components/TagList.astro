---
import { Badge } from '@/components/ui/badge';

// Component for displaying clickable tag badges
// Referenced from: https://docs.astro.build/en/guides/typescript/#component-props

interface Props {
	tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
	{tags.map((tag) => (
		<a href={`/tags/${tag}/`}>
			<Badge variant="secondary" className="rounded-full px-3 py-1 text-xs font-medium">
				{tag}
			</Badge>
		</a>
	))}
</div>
