---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import AuthorCard from '@/components/AuthorCard.astro';
import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/Footer.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import Giscus from '@/components/Giscus.astro';
import Header from '@/components/Header.astro';
import TagList from '@/components/TagList.astro';
import { Separator } from '@/components/ui/separator';

type Props = Omit<CollectionEntry<'blog'>['data'], 'author' | 'tags' | 'draft'> & {
	author?: CollectionEntry<'authors'> | undefined;
	tags?: string[];
	draft?: boolean;
	minutesRead?: string;
};

const { title, description, pubDate, updatedDate, heroImage, author, tags, minutesRead } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="mx-auto max-w-3xl px-4 py-12 sm:px-6">
			<article class="space-y-10">
				{heroImage && (
					<div class="overflow-hidden rounded-2xl border border-border/60 shadow-sm">
						<Image width={1200} height={630} src={heroImage} alt={title} class="h-full w-full object-cover" />
					</div>
				)}

				<div class="space-y-4 text-center">
					<div class="flex flex-wrap items-center justify-center gap-3 text-xs uppercase tracking-[0.3em] text-muted-foreground">
						<span>
							<FormattedDate date={pubDate} />
						</span>
						{minutesRead && <span>{minutesRead}</span>}
						{updatedDate && (
							<span class="text-muted-foreground/80">
								Updated <FormattedDate date={updatedDate} />
							</span>
						)}
					</div>
					<h1 class="text-4xl font-semibold text-foreground sm:text-5xl">{title}</h1>
					{tags && tags.length > 0 && (
						<div class="flex justify-center">
							<TagList tags={tags} />
						</div>
					)}
				</div>

				<Separator />

				<div class="prose prose-lg max-w-none text-foreground">
					<slot />
				</div>
				{author && <AuthorCard author={author} />}
				<Giscus />
			</article>
		</main>
		<Footer />
	</body>
</html>
